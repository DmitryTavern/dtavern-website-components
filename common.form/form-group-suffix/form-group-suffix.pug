//- Props:
//-   - tag: string
//-   - type: string

mixin form-group-suffix(props={})
	-
		var tag = props.tag || 'div'
		var tagClass = 'form-group-suffix'
		var tagTypeClass = props.type ? tagClass + '_type_' + props.type : ''

	#{tag}(class=tagClass, class=tagTypeClass)&attributes(attributes)
		block
