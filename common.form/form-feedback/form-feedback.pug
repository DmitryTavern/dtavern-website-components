//- Props:
//-   - tag: string
//-   - type: string
//-   - classes: string
//-   - attrs: object

mixin form-feedback(props={})
	-
		var tag = props.tag || 'div'
		var tagClass = 'form-feedback'
		var tagTypeClass = props.type ? tagClass + '_type_' + type : ''

	#{tag}(class=tagClass, class=props.classes, class=tagTypeClass)&attributes(props.attrs)
		block
