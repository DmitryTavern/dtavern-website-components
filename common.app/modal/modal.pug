mixin modal
	-
		var tagClass = 'modal'
		var tagCloseClass = 'modal-close'
		var tagDialogClass = 'modal-dialog'
		var tagContentClass = 'modal-content'

	div(class=tagClass)&attributes(attributes)
		div(class=tagDialogClass)
			button.btn(class=tagCloseClass, data-dismiss, aria-label='Close modal')

			div(class=tagContentClass)
				div
					block
